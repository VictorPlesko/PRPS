<AnchorPane prefHeight="720.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.CreateTestController">
   <children>
      <AnchorPane layoutX="-2.0" prefHeight="64.0" prefWidth="1029.0" style="-fx-background-color: #FAAC58;">
         <children>
            <Button fx:id="testViewButton" layoutX="278.0" layoutY="11.0" mnemonicParsing="false" prefHeight="42.0" prefWidth="236.0" style="-fx-background-radius: 20; -fx-border-radius: 20;" text="View Test Log">
               <font>
                  <Font name="Comic Sans MS Bold Italic" size="20.0" />
               </font>
            </Button>
            <Button fx:id="testsButton" layoutX="575.0" layoutY="11.0" mnemonicParsing="false" prefHeight="42.0" prefWidth="236.0" style="-fx-background-radius: 20; -fx-border-radius: 20;" text="Tests">
               <font>
                  <Font name="Comic Sans MS Bold Italic" size="20.0" />
               </font>
            </Button>
            <Button fx:id="logOutButton" layoutX="875.0" layoutY="11.0" mnemonicParsing="false" style="-fx-border-radius: 20; -fx-background-radius: 20;" text="Log out">
               <font>
                  <Font name="Comic Sans MS Bold Italic" size="20.0" />
               </font>
            </Button>
            <Label layoutX="14.0" layoutY="11.0" text="Testing System">
               <font>
                  <Font name="Comic Sans MS Bold Italic" size="25.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <TextField fx:id="subjectNameTF" layoutX="15.0" layoutY="352.0" prefHeight="31.0" prefWidth="998.0" promptText="Enter subject name" style="-fx-border-radius: 20; -fx-background-radius: 20;">
         <font>
            <Font name="Comic Sans MS Bold Italic" size="17.0" />
         </font>
      </TextField>
      <TextField fx:id="timeTF" layoutX="14.0" layoutY="419.0" prefHeight="31.0" prefWidth="998.0" promptText="Enter test time (hh:mm:ss)" style="-fx-border-radius: 20; -fx-background-radius: 20;">
         <font>
            <Font name="Comic Sans MS Bold Italic" size="17.0" />
         </font>
      </TextField>
      <Label layoutX="349.0" layoutY="80.0" text="Window for creating tests.">
         <font>
            <Font name="Comic Sans MS Bold Italic" size="25.0" />
         </font>
      </Label>
      <Label layoutX="16.0" layoutY="116.0" prefHeight="174.0" prefWidth="998.0" text="In this window you need to fill in all the empty fields indicating the test data (subject, time and number of questions). Next, a form for filling out questions will become available to you. When creating a question, you need to indicate at least one correct answer, as well as fill in all empty fields." wrapText="true">
         <font>
            <Font name="Comic Sans MS Bold Italic" size="20.0" />
         </font></Label>
      <Label layoutX="16.0" layoutY="290.0" text="Thank you for choosing our system.">
         <font>
            <Font name="Comic Sans MS Bold Italic" size="20.0" />
         </font>
      </Label>
      <TextField fx:id="numQusTF" layoutX="14.0" layoutY="487.0" prefHeight="31.0" prefWidth="998.0" promptText="Enter the number of questions" style="-fx-border-radius: 20; -fx-background-radius: 20;">
         <font>
            <Font name="Comic Sans MS Bold Italic" size="17.0" />
         </font>
      </TextField>
      <Button fx:id="addQesButton" layoutX="395.0" layoutY="588.0" mnemonicParsing="false" prefHeight="42.0" prefWidth="236.0" style="-fx-background-radius: 20; -fx-border-radius: 20;" text="Add questions">
         <font>
            <Font name="Comic Sans MS Bold Italic" size="20.0" />
         </font>
      </Button>
   </children>
